{
  "manifest_version": 3,
  "name": "Spotlight Presenter",
  "version": "1.0.1",
  "description": "Hold right mouse button to create a spotlight around the cursor.",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": []
}
